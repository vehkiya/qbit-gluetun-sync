{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "go",
        "golang",
        "docker.io/library/golang"
      ],
      "groupName": "Go"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}